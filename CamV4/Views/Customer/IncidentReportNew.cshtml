
@{
    ViewBag.Title = "New Incident Report - Rack Manager - Rack Management Tool - cam|industrial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/NgScript/Controller/palletRackIncidentCtrl.js"></script>

<main class="main-content2 position-relative max-height-vh-100 h-100 " ng-app="myApp" ng-controller="palletRackIncidentCtrl">
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none" id="navbarBlur" navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="@Url.Action("IncidentReport", "Customer")">Incident Reports</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Incident Report</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Hello @Session["LoggedInUserName"]!</h6>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                </div>
                <ul class="navbar-nav  justify-content-end">
                    <li class="nav-item d-flex align-items-center">
                        <a href="@Url.Action("Login", "Account")" class="nav-link text-body font-weight-bold px-0">
                            <i class="fa fa-sign-out me-sm-1"></i>
                            <span class="d-sm-inline d-none">Sign Out</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4" >
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header card-blue p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="pt-4 pb-4">
                            <h6 class="text-white text-capitalize ps-3 mt-2">Create New Incident Report</h6>
                        </div>
                    </div>
                    <div class="card-body">
                        <form class="">                            
                            <div class="row">
                                <div class="col-sm-12">
                                    <p>This incident report is designed to be used by a qualified person/supervisor to identify and document an incident data to generate a request for a formal incident inspection or repair material to comply with Occupational Health and Safety Regulation. </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Location ID<span class="error">*</span></span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">                                       
                                        <select name="CustomerLocationId" id="CustomerLocationId" class="form-control" ng-model="customerLocationId" required>
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getCustomerLocationID" value="{{d.CustomerLocationID}}">{{d.LocationName}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Type of rack(s)<span class="error">*</span></span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="IncidentReportType" id="IncidentReportType" class="form-control" ng-model="IncidentReportType" required>
                                            <option value="">-- Select --</option>
                                            <option value="selective">Selective</option>
                                            <option value="double deep">Double Deep</option>
                                            <option value="drivein">Drive-in</option>
                                            <option value="pushback">Pushback</option>
                                            <option value="cantilever">Cantilever</option>
                                            <option value="others">Others</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Incident Date</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="date" class="form-control" id="IncidentDate" ng-model="incidentDate"
                                               name="IncidentDate">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Incident Number</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="IncidentNumber" id="IncidentNumber" ng-model="incidentnumber">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12" style="border-bottom: 1px solid #f0f2f5;margin-bottom:5px;">
                                    <span>Location</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Area</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="Area" id="Area" ng-model="area">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Row</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="Row" id="Row" ng-model="row">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Aisle</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="Aisle" id="Aisle" ng-model="aisle">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Bay</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="Bay" id="Bay" ng-model="bay">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Level</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3 scroller">
                                        <ul class="navbar-nav form-control">
                                            <li ng-repeat="level in getAllLevels">
                                                <label>
                                                    <input type="checkbox" ng-model="level.selected" />
                                                    {{level.name}}
                                                </label>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Beam Location</span>
                                </div>
                                <div class="col-sm-4">
                                    <ul class="navbar-nav form-control">
                                        <li ng-repeat="beam in getAllBeamLocations">
                                            <label>
                                                <input type="checkbox" ng-model="beam.selected" />
                                                {{beam.name}}
                                            </label>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Frame Side</span>
                                </div>
                                <div class="col-sm-4">
                                    <ul class="navbar-nav form-control">
                                        <li ng-repeat="side in getAllFrameSides">
                                            <label>
                                                <input type="checkbox" ng-model="side.selected" />
                                                {{side.name}}
                                            </label>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-sm-2">
                                    <span>Reported by</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="Reportedby" id="Reportedby" ng-model="reportedby">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12" style="border-bottom: 1px solid #f0f2f5;margin-bottom:5px;">                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Incident Summary</span>
                                </div>
                                <div class="col-sm-8">
                                    <div class="input-group input-group-outline mb-3">
                                        <textarea type="text" class="form-control" id="IncidentSummary" ng-model="incidentSummary" name="IncidentSummary" rows="5"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Incident Photos</span>
                                </div>
                                <div class="col-sm-6">
                                    @*<input type="file" id="incidentPhotos" name="incidentPhotos" multiple
                                           accept="image/*"
                                           onchange="angular.element(this).scope().previewImages(this.files)" />*@
                                    <input type="file" id="incidentPhotos"  name="incidentPhotos"  multiple  accept="image/*"
                                           onchange="angular.element(this).scope().onPhotosSelected(this.files)" />

                                    <!-- Preview Uploaded Images -->
                                    <div class="mt-3">
                                        <div ng-repeat="photo in previewPhotoList track by $index" class="d-inline-block me-2 mb-2">
                                            <img ng-src="{{photo.src}}" alt="Incident Photo" style="width: 100px; height: 100px; object-fit: cover; border: 1px solid #ccc;">
                                            <div class="text-center">
                                                <button type="button" class="btn btn-sm btn-danger mt-1"
                                                        ng-click="removePreviewImage($index)">
                                                    Remove
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center float-end">
                                <button type="submit" ng-click="SaveIncidentReport()" class="btn btn-lg bg-gradient-info btn-lg w-100 mt-4 mb-0">Add Incident Report</button>
                                <span style="color:red">{{errorNot}}</span>
                            </div>
                        </form>
                    </div>
                </div>
                @Html.Partial("_FooterLayout")
            </div>
        </div>
    </div>
</main>