                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Customer</th>
                                        <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Location ID</th>
                                        <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Region</th>
                                        <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Document Type</th>
                                        <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Document</th>
                                        <th class="text-secondary opacity-7"></th>
                                    </tr>
                                </thead>

                                <!-- Check if filtered list is empty -->
                                <tbody ng-if="(getAllCustomerLocationHistoryDocument | filter:search).length === 0">
                                    <tr>
                                        <td colspan="5" class="text-center text-sm text-muted">No History/Legacy Document Found</td>
                                    </tr>
                                </tbody>

                                <!-- Show table rows if data exists -->
                                <tbody ng-repeat="d in getAllCustomerLocationHistoryDocument | filter:search | startFrom:(currentPage-1)*itemsPerPage | limitTo:itemsPerPage"
