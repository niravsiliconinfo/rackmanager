@model CamV4.Models.CustAndCustomerLocationViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}
<script src="~/NgScript/Controller/customerCtrl.js"></script>

<main class="main-content2 position-relative max-height-vh-100 h-100 border-radius-lg " ng-app="myApp" ng-controller="customerCtrl">
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="@Url.Action("ManageCustomer", "Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Company</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Hello @Session["LoggedInUserName"]!</h6>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                </div>
                <ul class="navbar-nav  justify-content-end">
                    <li class="nav-item d-flex align-items-center">
                        <a href="@Url.Action("Login", "Account")" class="nav-link text-body font-weight-bold px-0">
                            <i class="fa fa-sign-out me-sm-1"></i>
                            <span class="d-sm-inline d-none">Sign Out</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header card-blue p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="pt-4 pb-4">
                            <div class="row">
                                <div class="col-6 d-flex align-items-center">
                                    <h6 class="text-white text-capitalize ps-3 mt-2">Edit Company</h6>
                                </div>
                                <div class="col-6 text-end">
                                    <h6 class="text-white text-capitalize ps-3 mt-2 mx-3">@Session["CustomerId"]</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form class="">
                            <input id="antiForgeryToken" ng-model="antiForgeryToken" type="hidden" ng-init="antiForgeryToken='@GetAntiForgeryToken()'" />
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Company Name *</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" name="CustomerName" id="CustomerName" ng-model="customername" ng-init="customername = '@Model.CustomerName'">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>User Name *</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="UserName" id="UserName" ng-model="userName" ng-init="userName = '@Model.UserName'">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Phone</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="CustomerPhone" id="CustomerPhone" ng-model="customerPhone" ng-init="customerPhone = '@Model.CustomerPhone'">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Email</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="CustomerEmail" id="CustomerEmail" ng-model="customerEmail" ng-init="customerEmail = '@Model.CustomerEmail'">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Website</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="CustomerWebsite" id="CustomerWebsite" ng-model="customerWebsite" ng-init="customerWebsite = '@Model.CustomerWebsite'">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>NAV Number</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="CustomerNAVNo" id="CustomerNAVNo" ng-model="customerNAVNo" ng-init="customerNAVNo = '@Model.CustomerNAVNo'">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Company Address</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <textarea type="text" class="form-control" name="CustomerAddress" id="CustomerAddress" ng-model="customeraddress" ng-init="customeraddress = '@Model.CustomerAddress'"></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Country</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="country" id="drpcountry" class="form-control" ng-model="country" ng-change="GetProvincebyCountryId()" ng-init="country = '@Model.Country'">
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getAllCountries" value="{{d.CountryID}}">{{d.CountryName}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Province</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="province" id="drpprovince" class="form-control" ng-model="province" ng-click="GetProvincebyCountryModelId(country)" ng-init="province = '@Model.ProvinceID'">
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getAllProvince" value="{{d.ProvinceID}}">{{d.ProvinceName}}</option>
                                        </select>
                                    </div>
                                    @if (Model.ProvinceID != null)
                                    {
                                        <span class="text-sm text-rose" ng-if="!province && !country">Please select country.</span>
                                    }
                                </div>
                                <div class="col-sm-2">
                                    <span>City</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="city" class="form-control" ng-model="city" ng-init="city = '@Model.CityID'" ng-click="GetCitybyProvinceModelId(province)">
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getAllCities" value="{{d.CityID}}">{{d.CityName}}</option>
                                        </select>
                                    </div>
                                    @if (Model.CityID != null)
                                    {
                                        <span class="text-sm text-rose" ng-if="!city && !province">Please select province.</span>
                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Pincode</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" name="pin" id="pin" ng-model="pin" ng-init="pin = '@Model.PinCode'" maxlength="8">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Company Contact Name</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" required name="CustomerContactName" id="CustomerContactName" ng-model="customercontactname" ng-init="customercontactname = '@Model.CustomerContactName'">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Password</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" name="CustomerPharse" id="CustomerPharse" ng-model="CustomerPharse" ng-init="CustomerPharse = '@Model.CustomerPharse'" maxlength="8" readonly="readonly">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                </div>
                                <div class="col-sm-4">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Logo</span>
                                </div>
                                <div class="col-sm-4">
                                    <h6 class="text-capitalize ps-3 mb-0">
                                        Select files
                                        <input id="getlogoid" type="file" ng-model="customerlogo" minnum="2" name="file" value="Files" base-sixty-four-input onload="onLoad" maxsize="500" accept="image/*" class="file" />
                                    </h6>
                                </div>

                            </div>
                            @*<input type="text" ng-model="customerlogoold" ng-init="customerlogoold = '@Model.CustomerLogo'" style="display:none;" />*@
                            <table class="table table-bordered table-stripped table-upload">
                                <thead>
                                    <tr>
                                        <th>
                                            Preview
                                        </th>
                                        <th>
                                            File Name
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @*<img ng-src="../img/logos/@Model.CustomerLogo" class="avatar avatar-xl me-3 border-radius-lg" alt="@Model.CustomerLogo">*@
                                            <img ng-src="@Model.CustomerLogo" class="avatar avatar-xl me-3 border-radius-lg" alt="@Model.CustomerLogo">
                                        </td>
                                        <td>
                                            @Model.CustomerLogo
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <img ng-src="data:{{customerlogo.filetype}};base64,{{customerlogo.base64}}" style="width:100px;">
                                        </td>
                                        <td>
                                            {{customerlogo.filename}}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            @*<div class="text-center float-end d-flex justify-content-end gap-2">
                                    <button type="submit" ng-click="EditCustomer(@Model.CustomerID)" class="btn btn-lg bg-gradient-info btn-lg w-100 mt-4 mb-0">Update Company</button>
                                    <button style="width:25%;" ng-click="sendPassword(@Model.CustomerID)" class="btn btn-lg bg-gradient-info btn-lg w-100 mt-4 mb-0">Send Password</button>
                                </div>*@
                            <div class="d-flex justify-content-center align-items-center gap-3 mt-4 mb-3">
                                <button ng-click="sendPassword(@Model.CustomerID)" class="btn btn-lg bg-gradient-info px-4">
                                    Send Password
                                </button>
                                <button type="submit" ng-click="EditCustomer(@Model.CustomerID)" class="btn btn-lg bg-gradient-info px-4">
                                    Update Company
                                </button>
                            </div>



                            <div class="row">
                                <span style="color:red">{{errorNot}}</span>
                            </div>
                        </form>
                    </div>
                </div>
                <br />
                <div class="card my-4">
                    <div class="card-header card-blue p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="pt-4 pb-4">
                            <div class="row">
                                <div class="col-6 d-flex align-items-center">
                                    <h6 class="text-white text-capitalize ps-3 mb-0">Company Locations</h6>
                                </div>
                                <div class="col-6 text-end">
                                    <a class="btn bg-gradient-dark mb-0 mx-3" href="@Url.Action("AddCustLocation", "Admin", new { id = Model.CustomerID })"><i class="material-icons text-sm">add</i>&nbsp;&nbsp;Add New Company Location</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body pb-2">
                        <div class="table-responsive p-0" ng-if="getCustomerLocationByCustomerId">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Location ID</th>
                                        <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Address</th>
                                        <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Region</th>
                                        <th class="text-secondary opacity-7"></th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="d in getCustomerLocationByCustomerId | filter:search | startFrom:(currentPage-1)*itemsPerPage | limitTo:itemsPerPage">
                                    <tr>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">{{d.LocationName}}</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">{{d.CustomerAddress}}<span ng-if="d.CustomerAddress && d.City">,</span> {{d.City}}</p>
                                            <p class="text-xs text-secondary mb-0">{{d.Province}}<span ng-if="d.Province && d.PinCode">,</span> {{d.PinCode}} </p>
                                        </td>
                                        <td class="align-middle text-sm">
                                            <span class="text-secondary text-xs font-weight-bold">{{d.Region}}</span>
                                        </td>
                                        <td class="align-middle">
                                            <a href="@Url.Action("AddCustomerArea", "Admin")?id={{d.CustomerLocationID}}" class="tooltip-new">
                                                <i class="material-icons text-lg">location_city</i>
                                                <span class="tooltiptext">Add Area</span>
                                            </a>
                                            @*<a href="@Url.Action("AddLocationContact", "Admin")?id={{d.CustomerLocationID}}" class="tooltip-new">
                                                    <i class="material-icons text-lg">contact_phone</i>
                                                    <span class="tooltiptext">Add Contact</span>
                                                </a>*@
                                            <a href="@Url.Action("EditCustLocation", "Admin")?id={{d.CustomerLocationID}}">
                                                <i class="material-icons text-lg">edit</i>
                                            </a>
                                            <a href="@Url.Action("DeleteCustLocation", "Admin")?id={{d.CustomerLocationID}}">
                                                <i class="material-icons text-lg">delete</i>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <nav>
                                Show <select ng-model="viewby" ng-change="setItemsPerPage(viewby)" style="height:25px">
                                    <option>5</option>
                                    <option>10</option>
                                    <option>20</option>
                                    <option>30</option>
                                    <option>40</option>
                                    <option>50</option>
                                </select> of {{getCustomerLocationByCustomerIdcount}} Company Locations
                                <pagination total-items="totalgetCustomerLocationByCustomerId" ng-model="currentPage" max-size="maxSize" class="pagination" rotate="false" num-pages="numPages"
                                            items-per-page="itemsPerPage" previous-text="«" next-text="»"></pagination>
                            </nav>
                        </div>
                    </div>
                </div>
