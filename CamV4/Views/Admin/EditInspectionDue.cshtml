@model CamV4.Models.Inspection
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}
<script src="~/NgScript/Controller/inspectionDueCtrl.js"></script>

<main class="main-content2 position-relative max-height-vh-100 h-100 border-radius-lg " ng-app="myApp" ng-controller="inspectionDueCtrl">
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="@Url.Action("ManageInspectionDue", "Admin")">Manage Inspection Due</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Inspection Due</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Hello @Session["LoggedInUserName"]!</h6>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                </div>
                <ul class="navbar-nav  justify-content-end">
                    <li class="nav-item d-flex align-items-center">
                        <a href="@Url.Action("Login", "Account")" class="nav-link text-body font-weight-bold px-0">
                            <i class="fa fa-sign-out me-sm-1"></i>
                            <span class="d-sm-inline d-none">Sign Out</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header card-blue p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="pt-4 pb-4">
                            <h6 class="text-white text-capitalize ps-3 mt-2">Edit Inspection Due - @Model.InspectionDocumentNo</h6>
                            <h8 class="text-white text-sm" style="float: left; padding-left: 1rem !important;"><span class="error">*</span> is Mandatory Field(s).</h8>
                        </div>
                    </div>
                    <div class="card-body">
                        <form class="">
                            <input id="antiForgeryToken" ng-model="antiForgeryToken" type="hidden" ng-init="antiForgeryToken='@GetAntiForgeryToken()'" />
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Inspection Type <span class="error">*</span></span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="InspectionType" id="InspectionType" class="form-control" ng-model="inspectionType"
                                                ng-init="inspectionType = '@Model.InspectionType'" required>
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getAllInspectionType" value="{{d.InspectionTypeCode}}">{{d.InspectionTypeName}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Customer <span class="error">*</span></span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="CustomerId" id="CustomerId" class="form-control" ng-model="customerId"
                                                ng-init="customerId = '@Model.CustomerId'" required>
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getAllCustomers" value="{{d.CustomerID}}">{{d.CustomerName}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Customer Location<span class="error">*</span></span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="CustomerLocationId" id="CustomerLocationId" class="form-control" ng-model="customerLocationId" ng-init="customerLocationId = '@Model.CustomerLocationId'"
                                                ng-click="GetCustomerLocationByCustomerIdDrpd(customerId)" required>
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getCustomerLocationByCustomerIdDrpd" value="{{d.CustomerLocationID}}">{{d.LocationName}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Customer Area</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="CustomerAreaID" id="CustomerAreaID" class="form-control" ng-model="customerAreaId"
                                                ng-init="customerAreaID = '@Model.CustomerAreaID'" ng-click="GetAreaByLocationIdDrpd(customerLocationId)">
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getAreaDetailsByLocationId" value="{{d.AreaID}}">{{d.AreaName}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Assigned Inspector<span class="error">*</span></span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="EmployeeId" id="EmployeeId" class="form-control" ng-model="employeeId"
                                                ng-init="employeeId = '@Model.EmployeeId'" required>
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getAllEmployee" value="{{d.EmployeeID}}">{{d.EmployeeName}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Scheduled Date <span class="error">*</span></span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="datetime" class="form-control" readonly ng-click="ShowDatepickerClick()"
                                               ng-show="ReadOnlyDatePicker" ng-model="inspectionDate" ng-init="inspectionDate = '@Model.InspectionDate.ToString("yyyy-MM-dd")'">

                                        <input type="date" class="form-control" id="InspectionDate" name="InspectionDate" ng-show="ShowDatepicker"
                                               ng-model="inspectionDate" ng-init="inspectionDate = '@Model.InspectionDate.ToString("yyyy-MM-dd")'">
                                    </div>
                                </div>
                            </div>                            
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Status</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="InspectionStatus" id="InspectionStatus" class="form-control" ng-model="inspectionStatus"
                                                ng-init="inspectionStatus = '@Model.InspectionStatus'">
                                            <option value="">-- Select --</option>
                                            <option value="1">Due</option>
                                            <option value="2">In Progress</option>
                                            <option value="3">Sent for Approval</option>
                                            <option value="4">Approved & Complete</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Facilities Areas</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3 scroller">
                                        <ul class="navbar-nav">
                                            <li ng-repeat="f in getAllFacilitiesArea">
                                                <label for="chkManufacturerFA_{{f.FacilitiesAreaId}}">
                                                    <input id="chkManufacturerFA_{{f.FacilitiesAreaId}}" type="checkbox" ng-model="f.selected" />
                                                    {{f.FacilitiesAreaName}}
                                                </label>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Process Overviews</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3 scroller">
                                        <ul class="navbar-nav">
                                            <li ng-repeat="p in getAllProcessOverview">
                                                <label for="chkManufacturerPO_{{p.ProcessOverviewId}}">
                                                    <input id="chkManufacturerPO_{{p.ProcessOverviewId}}" type="checkbox" ng-model="p.selected" />
                                                    {{p.ProcessOverviewDesc}}
                                                </label>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Document Title</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3 scroller">
                                        <ul class="navbar-nav">
                                            <li ng-repeat="t in getAllDocumentTitle">
                                                <label for="chkDocument_{{t.DocumentId}}">
                                                    <input id="chkDocument_{{t.DocumentId}}" type="checkbox" ng-model="t.selected" />
                                                    {{t.DocumentTitle1}}
                                                </label>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>CAD Documents</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <textarea rows="5" cols="60" class="form-control" id="CADDocuments" name="CADDocuments"
                                                  ng-model="cADDocuments" ng-init="cADDocuments = '@Model.CADDocuments'"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center float-end">
                                <button type="submit" ng-click="EditInspectionDue(@Model.InspectionId)" class="btn btn-lg bg-gradient-info btn-lg w-100 mt-4 mb-0">Update Inspection Due</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_FooterLayout")
</main>

