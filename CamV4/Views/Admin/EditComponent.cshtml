@model CamV4.Models.Component
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}
<script src="~/NgScript/Controller/componentCtrl.js"></script>

<main class="main-content2 position-relative max-height-vh-100 h-100 border-radius-lg " ng-app="myApp" ng-controller="componentCtrl">
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="@Url.Action("ManageComponent", "Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Component</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Hello @Session["LoggedInUserName"]!</h6>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                </div>
                <ul class="navbar-nav  justify-content-end">
                    <li class="nav-item d-flex align-items-center">
                        <a href="@Url.Action("Login", "Account")" class="nav-link text-body font-weight-bold px-0">
                            <i class="fa fa-sign-out me-sm-1"></i>
                            <span class="d-sm-inline d-none">Sign Out</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header card-blue p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="pt-4 pb-4">
                            <h6 class="text-white text-capitalize ps-3 mt-2">Edit Component</h6>
                        </div>
                    </div>
                    <div class="card-body">
                        <form class="">
                            <input id="antiForgeryToken" ng-model="antiForgeryToken" type="hidden" ng-init="antiForgeryToken='@GetAntiForgeryToken()'" />
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Component</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="text" class="form-control" name="ComponentName" id="ComponentName"
                                               ng-model="componentName" ng-init="componentName = '@Model.ComponentName'">
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Manufacturer</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3 scroller">
                                        <ul class="navbar-nav">
                                            <li ng-repeat="man in getAllManufacturer">
                                                <label for="chkManufacturer_{{man.ManufacturerId}}">
                                                    <input id="chkManufacturer_{{man.ManufacturerId}}" type="checkbox" ng-model="man.selected" />
                                                    {{man.ManufacturerName}}
                                                </label>
                                            </li>
                                        </ul>
                                    </div>
                                    @*<input type="button" value="Get" ng-click="GetValue()" />
                                    Result : <span>{{ checkedManufacturerId }}</span>*@
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Component Image</span>
                                </div>
                                <div class="col-sm-8">
                                    <h6 class="text-capitalize ps-3 mb-0">
                                        Select files
                                        <input id="getcomponentImageid" type="file" ng-model="componentImage" minnum="2" name="file" value="Files" base-sixty-four-input onload="onLoad" maxsize="500" accept="image/*" class="file" />
                                    </h6>
                                </div>

                            </div>
                            <table class="table table-bordered table-stripped table-upload">
                                <thead>
                                    <tr>
                                        <th>
                                            Preview
                                        </th>
                                        <th>
                                            File Name
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <img ng-src="../img/component/@Model.ComponentImage" class="avatar avatar-xl me-3 border-radius-lg" alt="@Model.ComponentImage">
                                        </td>
                                        <td>
                                            @Model.ComponentImage
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <img ng-src="data:{{componentImage.filetype}};base64,{{componentImage.base64}}" style="width:100px;">
                                        </td>
                                        <td>
                                            {{componentImage.filename}}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="text-center float-end">
                                <button type="submit" ng-click="EditComponent(@Model.ComponentId)" class="btn btn-lg bg-gradient-info btn-lg w-100 mt-4 mb-0">Update Component</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_FooterLayout")
</main>

