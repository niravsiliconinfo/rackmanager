@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}
@{
    var userType = Session["LoggedInUserType"].ToString();
}
<script src="~/Scripts/ui-bootstrap-tpls-0.11.0.js"></script>
<script src="~/NgScript/Controller/documentsCtrl.js"></script>

<main class="main-content2 position-relative max-height-vh-100 h-100" ng-app="myApp" ng-controller="documentsCtrl">
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none" id="navbarBlur" navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="@Url.Action("ManageHistoryLegacyDocuments", "Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">History/Legacy Documents</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Hello @Session["LoggedInUserName"]!</h6>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                </div>
                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item d-flex align-items-center">
                        <a href="@Url.Action("Login", "Account")" class="nav-link text-body font-weight-bold px-0">
                            <i class="fa fa-sign-out me-sm-1"></i>
                            <span class="d-sm-inline d-none">Sign Out</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header card-blue p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="pt-4 pb-4">
                            <h6 class="text-white text-capitalize ps-3 mt-2">Add New History/Legacy Document</h6>
                        </div>
                    </div>
                    <div class="card-body">
                        <form class="">
                            <input id="antiForgeryToken" ng-model="antiForgeryToken" type="hidden" ng-init="antiForgeryToken='@GetAntiForgeryToken()'" />
                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Customer <span class="error">*</span></span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="CustomerId"
                                                id="CustomerId"
                                                class="form-control"
                                                ng-model="customerId"
                                                ng-change="GetCustomerLocationByCustomerIdDrpd(customerId)"
                                                ng-disabled="true"
                                                required>
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getAllCustomers"
                                                    ng-value="d.CustomerID">
                                                {{d.CustomerName}}
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Customer Location <span class="error">*</span></span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select name="CustomerLocationId" id="CustomerLocationId" class="form-control" ng-model="customerLocationId" ng-change="GetAreaByLocationIdDrpd(customerLocationId)" required>
                                            <option value="">-- Select --</option>
                                            <option ng-repeat="d in getCustomerLocationByCustomerIdDrpd" value="{{d.CustomerLocationID}}">{{d.LocationName}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-2">
                                    <span>Document Type</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <select type="text" class="form-control" name="FileCategory" id="FileCategory" ng-model="fileCategory">
                                            <option value="">-- Select --</option>
                                            <option value="Third Party Report">Third Party Report</option>
                                            <option value="Capacity Plaques">Capacity Plaques</option>
                                            <option value="Building Drawings(Architecture/Structural/Mechanical)">Building Drawings(Architecture/Structural/Mechanical)</option>
                                            <option value="Municipality/OHS Report">Municipality/OHS Report</option>
                                            <option value="Quoation/Proposal">Quoation/Proposal</option>
                                            <option value="Slab Letter">Slab Letter</option>
                                            <option value="Fire Letter">Fire Letter</option>
                                            <option value="Permit Schedules">Permit Schedules</option>
                                            <option value="Others">Others</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <span>Select File</span>
                                </div>
                                <div class="col-sm-4">
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="file" id="file" ng-click="FileUploadMultiple()" name="file" multiple onchange="angular.element(this).scope().setFile(this)" accept=".pdf" class="btn btn-warning" />
                                        <span>Please ensure that each client and location has a unique file name.</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <table class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>File Name</th>
                                                <th>File Type</th>
                                                <th>File Size</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="file in fileList">
                                                <td>{{file.file.name}}</td>
                                                <td>{{file.file.type}}</td>
                                                <td>{{file.file.size/1000}} KB</td>
                                                <td>
                                                    <button ng-click="removeSelectedPic(file.file.name)" class="btn btn-danger btn-sm">
                                                        <i class="material-icons text-sm">delete</i>
                                                    </button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="text-center float-end">
                                        <button type="submit" ng-click="UploadHistoryLegacyFile()" class="btn btn-md bg-gradient-info btn-lg w-100 mb-0">Upload History/Legacy File</button>
                                        <span style="color:red">{{validationShow}}</span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                @Html.Partial("_FooterLayout")
            </div>
        </div>
    </div>
</main>