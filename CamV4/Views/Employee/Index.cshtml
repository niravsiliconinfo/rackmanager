                                <thead>
                                    <tr>
                                        <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder">Company</th>
                                        <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder">Location and Area</th>
                                        <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder">Done By</th>
                                        <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder">Started On</th>
                                        <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder">Download</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="d in getRecentInspectionCustomerByEmployeeId">
                                    <tr ng-click="InspectionsheetClick(d.InspectionId)">
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img ng-src="{{d.CustomerLogo}}" class="avatar avatar-sm me-3 border-radius-lg" alt="{{d.CustomerLogo}}">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">{{d.Customer}}</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">{{d.CustomerLocation}}</p>
                                            <p class="text-xs font-weight-bold mb-0">{{d.CustomerArea}}</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">{{d.Employee}}</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <span class="text-xs font-weight-bold">{{d.InspectionStartedOn| date:'dd MMM yyyy'}}</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <a href="@Url.Action("ToPdfV2", "Admin")?id={{d.InspectionId}}"><i class="material-icons text-lg">download</i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card h-100">
                    <div class="card-header pb-0">
                        <h6>Inspection Due</h6>
