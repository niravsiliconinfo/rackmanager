@model IEnumerable<CamV4.Models.Province>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>


<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3 mt-2">Tasks table</h6>
                        </div>
                    </div>
                    <div class="card-body pb-2">
                        @if (Model.Count() != 0)
                        {
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Province Id</th>
                                            <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">ProvinceCode</th>
                                            <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">ProvinceName</th>
                                            <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">CountryId</th>
                                            <th class="text-dark text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">CreatedDate</th>
                                            <th class="text-secondary opacity-7"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <p class="text-xs text-secondary mb-0">@Html.DisplayFor(modelitem => item.ProvinceID)</p>
                                                </td>
                                                <td>
                                                    <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelitem => item.ProvinceCode)</p>
                                                </td>
                                                <td>
                                                    <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelitem => item.ProvinceName)</p>
                                                </td>
                                                <td>
                                                    <p class="text-xs mb-0">@Html.DisplayFor(modelitem => item.CountryID)</p>
                                                </td>
                                                <td class="align-middle text-sm">
                                                    <p class="text-xs font-weight-bold mb-0">@Html.DisplayFor(modelitem => item.CreatedDate)</p>
                                                </td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>
                                <br />
                            </div>
                        }
                        else
                        {
                            <h6 class="font-weight-bolder mb-0">
                                No task! Please add new tasks.
                            </h6>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>